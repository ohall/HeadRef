<?xml version="1.0" encoding="utf-8"?>
<views:AbstractRefView xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="AddTeamView" xmlns:components="components.*" xmlns:views="views.*">
	
	<fx:Script>
		<![CDATA[
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	
	<fx:Script>
		<![CDATA[
			import components.ColorPicker;
			
			import model.TeamModel;
			
			import spark.events.ViewNavigatorEvent;
			
			[Bindable]
			private var selectedColor:SolidColor;
			
			[Bindable]
			private var curTeamModel:TeamModel;
			
			private function colorChanged(e:Event):void {
				selectedColor = ColorPicker(e.currentTarget).currentColor;
				curTeamModel.teamColor = selectedColor.color;
			}
			

			protected function saveButtonClickHandler(event:MouseEvent):void{
				curTeamModel.captainEmail = emailInput.text;
				curTeamModel.teamName = emailInput.text;
				
			}
			
			override protected function viewActivateHandler(event:ViewNavigatorEvent):void{
				if (data != null) {
					createOrEditTeam( data as TeamModel);	
				}
			}
			
			
			private function createOrEditTeam(pTeam:TeamModel):void{
				if(pTeam.teamName == ""){//create
					curTeamModel = new TeamModel();
				}else{//edit
					for each(var team:TeamModel in headRefModel.teams){
						if(team.teamName == pTeam.teamName){
							curTeamModel = team;
						}
					}
				}
				
				
			}
			
		]]>
	</fx:Script>
	
	<s:Rect width="50" height="25" horizontalCenter="22" verticalCenter="-97">
		<s:fill>
			<s:SolidColor color="{selectedColor.color}" />
		</s:fill>
	</s:Rect>
	
	<s:VGroup>
		
		<s:HGroup width="100%">
			<s:Label text="Team Name: " styleName="editTeamLabel" verticalCenter="0" />
			<s:TextInput id="teamNameInput" text="{curTeamModel.teamName}" maxChars="10" verticalCenter="0"  width="100%" />		
		</s:HGroup>

		<s:HGroup width="100%">
			<s:Label text="Captain's Email: " styleName="editTeamLabel" verticalCenter="0" />
			<s:TextInput id="emailInput" maxChars="10" verticalCenter="0"  width="100%" />		
		</s:HGroup>
		
		<s:HGroup width="100%">
			<s:Label text="Choose Team Color: " styleName="editTeamLabel" />		
			<components:ColorPicker change="colorChanged(event)"/>
		</s:HGroup>
		
		<s:Button label="SAVE" click="saveButtonClickHandler(event)" />
	</s:VGroup>
</views:AbstractRefView>
