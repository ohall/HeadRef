<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark"
		title="HomeView" xmlns:model="model.*" actionBarVisible="false" >
	<s:layout>
		<s:VerticalLayout gap="80" horizontalAlign="center" paddingBottom="5" paddingLeft="5"
						  paddingRight="5" paddingTop="10" verticalAlign="top"/>
	</s:layout>
	<fx:Declarations>
		<s:ArrayCollection id="suppliesAC">
			<fx:Object name="Circuit" />

		</s:ArrayCollection>
		
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import model.GameModel;
			import model.LeagueRules;

			protected function addTeamButtonClickHandler(event:MouseEvent):void{
				navigator.pushView(EditTeamView);
				
			}
			
			protected function newRulesBtnClickHandler(event:MouseEvent):void{
				
			}
			
			protected function ruleListClickHandler(event:MouseEvent):void{
				var rules:LeagueRules = new LeagueRules();
				rules.strikesAllowed=3;
				rules.ballsAllowed=4;
				rules.foulsAllowed=3;
				rules.foulsAreStrikes=false;
				rules.walkOnBalls = true;
				rules.numberOfInnings = 1;
				
				rules.leagueManagerEmail = "oakley349@gmail.com";
				
				var game:GameModel = new GameModel();
				game.awayTeam = "MEATBALLS";
				game.awayTeamColor = 0x000000;
				game.homeTeam = "NYSH";
				game.leagueRules = rules;
				game.homeTeamColor= 0x3A70D2;
				
				navigator.pushView(GameView, game);
				
			}
			
		]]>
	</fx:Script>
	
	
	
	
	<s:VGroup width="100%">
		<s:Label text="Choose Rule Set:"/>
		<s:SpinnerListContainer width="100%">
			<s:SpinnerList id="ruleList" width="100%" click="ruleListClickHandler(event)"
						   dataProvider="{suppliesAC}" labelField="name"/>                    
		</s:SpinnerListContainer>
		<s:Button id="newRulesBtn" width="100%" label="Add New Rule Set"
				  click="newRulesBtnClickHandler(event)" />
		
		<s:Button id="addTeamButton" label="Edit Team View" click="addTeamButtonClickHandler(event)"/>	
	</s:VGroup>        

</s:View>
