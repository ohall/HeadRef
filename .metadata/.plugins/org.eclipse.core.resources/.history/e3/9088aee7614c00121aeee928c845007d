<?xml version="1.0" encoding="utf-8"?>
<s:SpinnerList xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" touchBegin="touchBeginHandler(event)" >
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Metadata>
		[Event(name="longPress", type="events.LongPressEvent")] 
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import events.LongPressEvent;
			
			import org.osmf.events.TimeEvent;
			
			private var _longPressTimer:Timer = new Timer(RefConstants.LONGPRESSDELAY,1);
			 
			
			
			protected function touchBeginHandler(event:TouchEvent):void{
				_longPressTimer.addEventListener(TimerEvent.TIMER_COMPLETE
				_longPressTimer.start()
				
			}
			
			private function handleLongPressTimeComplete(evt:TimerEvent){
				dispatchEvent(new LongPressEvent() );
			}
			
		]]>
	</fx:Script>
	
	
	
</s:SpinnerList>
