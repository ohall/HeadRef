<?xml version="1.0" encoding="utf-8"?>
<s:VGroup xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" width="400" height="300" xmlns:components="components.*">
	
	<fx:Metadata>
		[Event(name="addTeam", 		type="events.AddTeamEvent")] 
		[Event(name="teamSelected", type="events.TeamSelectedEvent")] 
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import events.AddTeamEvent;
			import events.TeamSelectedEvent;
			
			import model.TeamModel;
			
			import mx.collections.IList;
			
			[Bindable]
			public var dataProvider:IList;
			
			[Bindable]
			public var labelField:String = "teamName";
			
			protected function AddTeamButtonClickHandler(event:MouseEvent):void{
				dispatchEvent( new AddTeamEvent() ); 
				
			}
			
			protected function teamListClickHandler(event:MouseEvent):void{
				dispatchEvent( new TeamSelectedEvent(teamList.selectedItem as TeamModel ));
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	
	
	<components:HeadRefSpinnerList id="teamList" click="teamListClickHandler(event)" 
								   dataProvider="{dataProvider}" labelField="{labelField}"/>
	<s:Button width="100%" label="Add New Team" click="AddTeamButtonClickHandler(event)" />
	
</s:VGroup>
