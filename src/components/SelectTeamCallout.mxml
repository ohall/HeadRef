<?xml version="1.0" encoding="utf-8"?>
<s:Callout xmlns:fx="http://ns.adobe.com/mxml/2009" 
		   xmlns:s="library://ns.adobe.com/flex/spark"
		   open="openHandler(event)">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import events.AddTeamEvent;
			import events.TeamSelectedEvent;
			
			import model.TeamModel;
			
			import mx.collections.IList;
			
			import spark.events.PopUpEvent;
			
			public var teamList:IList;
			
		
			protected function teamButtonClicked(event:MouseEvent):void{
				
				var teamSelected:TeamModel = TeamModel( teamList.getItemAt(  parseInt(Button(event.currentTarget).id ) ) );
				dispatchEvent( new TeamSelectedEvent(teamSelected) );
				close();
				
			}
			
			
			protected function openHandler(event:PopUpEvent):void{
				for each(var team:TeamModel in teamList){
					var tButt:Button = new Button();
					tButt.label = team.teamName;
					tButt.setStyle("chromeColor",team.teamColor);
					tButt.id = teamList.getItemIndex(team).toString();
					tButt.percentWidth = 100;
					tButt.addEventListener(MouseEvent.CLICK, teamButtonClicked);
					teamButtonsGroup.addElement(tButt);
					
				}
			}
			
			protected function addTeamButtonClickHandler(event:MouseEvent):void{
				dispatchEvent( new AddTeamEvent() );
				close();
				
			}
			
		]]>
	</fx:Script>
	
	
	<s:VGroup>
		<s:VGroup id="teamButtonsGroup" width="100%" />
		<s:Button id="addTeamButton" width="100%" label="AddTeam" click="addTeamButtonClickHandler(event)" />
	</s:VGroup>
</s:Callout>
