<?xml version="1.0" encoding="utf-8"?>
<views:AbstractRefView xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" title="EndView" 
		xmlns:views="views.*"
		actionBarVisible="false" >
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	
	<fx:Script>
		<![CDATA[
			
			import mx.events.FlexEvent;
			
			protected function emailButtonclickHandler(event:MouseEvent):void{
				var s:String = "";
				s += "mailto:";
				
				s+= headRefModel.gameModel.leagueRules.leagueManagerEmail
				s+= "?";
				s+= "subject=" ;
				s+= headRefModel.gameModel.homeTeam+": "+headRefModel.gameModel.homeTeamScore+" - ";
				s+= headRefModel.gameModel.awayTeam+": "+headRefModel.gameModel.awayTeamScore;
				s+= "&";
				s+= "body=";
				s+= headRefModel.gameModel.homeTeam+": "+headRefModel.gameModel.homeTeamScore+" ";
				s+= headRefModel.gameModel.awayTeam+": "+headRefModel.gameModel.awayTeamScore+" ";
				navigateToURL( new URLRequest(s));
			}
			
		]]>
	</fx:Script>
	
	<s:VGroup>
		<s:Button label="Send Scores Email" click="emailButtonclickHandler(event)" />
	</s:VGroup>
</views:AbstractRefView>
