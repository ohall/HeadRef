<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("components.UndoButton")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="down" />
		<s:State name="over" />
		<s:State name="up" />
	</s:states>
	
	<s:Rect height="100%" width="100%" radiusX="{RefConstants.BUTTON_CORNER_RADII}"
			top="1" right="1" bottom="1" left="1">
		<s:stroke>
			<s:SolidColorStroke id="outline" weight="1" color="#8AE000" alpha="1" />
		</s:stroke>
		<s:fill>
			<s:SolidColor color="{RefConstants.LITEGRAY}"
						  color.down="{RefConstants.FLASHGREEN}"
						  alpha=".5"
						  alpha.down="1"/>
		</s:fill>
	</s:Rect>
	
	<!-- SkinParts
	name=iconDisplay, type=spark.primitives.BitmapImage, required=false
	name=labelDisplay, type=spark.core.IDisplayText, required=false
	-->
	<s:BitmapImage source="@Embed('../style/skins/undoIcon.png')" left="10" verticalCenter="0" height="100%" visible="true" visible.down="false"/>
	<s:Label id="labelDisplay" verticalCenter="0" horizontalCenter="0" 
			 textAlign="center"  styleName="undoLabel"
			 verticalAlign="middle" maxDisplayedLines="1"/> 
</s:Skin>
