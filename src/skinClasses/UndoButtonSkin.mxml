<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("components.UndoButton")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="down" />
		<s:State name="over" />
		<s:State name="up" />
	</s:states>
	
	<s:Rect radiusX="{RefConstants.BUTTON_CORNER_RADII}"
			top="1" right="1" bottom="1" left="1">
		<s:fill>
			<s:SolidColor color="{RefConstants.SIMPLE_GRAY}"
						  color.down="{RefConstants.FLASHGREEN}" />
		</s:fill>
	</s:Rect>
	
	<!-- SkinParts
	name=iconDisplay, type=spark.primitives.BitmapImage, required=false
	name=labelDisplay, type=spark.core.IDisplayText, required=false
	-->
	<s:BitmapImage source="@Embed('../style/skins/undo.png')" horizontalCenter="0" verticalCenter="0"/>
</s:Skin>
